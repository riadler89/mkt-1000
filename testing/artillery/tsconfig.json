{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "./tests/**/*.ts",
    "../playwright/page-objects/**/*.ts",
    "./playwright.config.ts"
  ],
  "exclude": ["node_modules", "playwright-report"]
}
